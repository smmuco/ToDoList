@model IEnumerable<ToDoList.Core.Entities.ToDoItem>

<h2>ToDo List</h2>
<a asp-action="Create" class="btn btn-primary">Yeni Görev Ekle</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
            <th>Durum</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@(item.IsCompleted ? "Tamamlandı" : "Beklemede")</td>
                <td>
                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
